{% extends "UrbikUserBundle::layout.html.twig" %}

{% block body %}
    <h2 class="text-center">Fiche Utilisateur Inscrit</h2>
    {% if user %}
        <div class="container">
            <div class="text-center">
                    <div class="well">
                            <p><span>Nom: </span><span>{{ user.nom }}</span></p>
                            <p><span>Prenom: </span><span>{{ user.prenom }}</span></p>
                            <p><span>Date de naissance: </span><span>{{ user.birthdate.format('d M Y') }}</span></p>
                            <p><span>Adresse mail: </span><span>{{ user.mail }}</span></p>
                            <p><span>Sexe: </span><span>{{ user.sex }}</span></p>
                            <p><span>Pays: </span><span>{{ user.country }}</span></p>
                            <p><span>RÃ©gion: </span><span>{{ user.region }}</span></p>
                            <p><span>Profession: </span><span>{{ user.job }}</span></p>
                        </div>
            </div>
            <div class="text-center">
                <a href="{{ path('urbik_user_admin')}}" class="btn btn-default">Retour</a>
                <a href="{{path('urbik_user_admin_edit', {'id': user.id }) }}" class="btn btn-warning">Modifier</a>
                <a href="{{path('urbik_user_admin_delete', {'id': user.id }) }}"  class="btn btn-danger">Supprimer</a>
            </div>
        </div>
       
    {% endif %}

{% endblock %}